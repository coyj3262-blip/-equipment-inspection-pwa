rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Inspection photos: organized by inspection ID
    // Pattern: /inspections/{inspectionId}/photos/{fileName}
    match /inspections/{inspectionId}/photos/{fileName} {
      // Read: Any authenticated user (for supervisor viewing)
      allow read: if request.auth != null;

      // Write: Only during inspection creation (before it's finalized)
      // TODO: Add operatorUid check when photo upload is implemented
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024  // Max 10MB
                   && request.resource.contentType.matches('image/.*');
    }

    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
