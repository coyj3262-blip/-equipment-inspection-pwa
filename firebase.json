{
    "hosting":  [
                    {
                        "site":  "inspection-v2-580043464912",
                        "public":  "dist",
                        "ignore":  [
                                       "firebase.json",
                                       "**/.*",
                                       "**/node_modules/**"
                                   ],
                        "rewrites":  [
                                         {
                                             "source":  "**",
                                             "destination":  "/index.html"
                                         }
                                     ]
                    }
                ],
    "storage":  {
                    "rules":  "storage.rules"
                },
    "database":  {
                     "rules":  "database.rules.json"
                 },
    "functions": {
        "source": "functions",
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run build"
        ]
    },
    "emulators": {
        "functions": {
            "port": 5001
        },
        "auth": {
            "port": 9099
        },
        "database": {
            "port": 9000
        },
        "ui": {
            "enabled": true,
            "port": 4000
        },
        "singleProjectMode": true
    }
}
